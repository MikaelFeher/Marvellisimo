<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.comics.ComicFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="372dp"
            tools:layout_editor_absoluteX="8dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <ImageView
                    android:layout_width="181dp"
                    android:layout_height="216dp"
                    android:id="@+id/iv_fragment_comics_thumbnail"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:text="Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fragment_comics_details_title"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_fragment_comics_thumbnail"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.498"/>

            <TextView
                    android:text="Desctription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fragment_comics_details_description"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fragment_comics_details_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/rv_fragment_comics_details_images_list"
                    android:text="Browse covers by swiping..."
                    app:layout_constraintBottom_toTopOf="@+id/rv_fragment_comics_details_images_list"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fragment_comics_details_description"
                    app:layout_constraintHorizontal_bias="0.036"
                    app:layout_constraintVertical_bias="1.0"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_fragment_label_for_rv_comics_details_images_list"/>

            <android.support.v7.widget.RecyclerView
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="209dp"
                    android:id="@+id/rv_fragment_comics_details_images_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fragment_comics_details_description"
                    app:layout_constraintHorizontal_bias="0.0">

            </android.support.v7.widget.RecyclerView>

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="62dp"
                    android:layout_height="64dp"
                    android:id="@+id/pb_fragment_comic_progressbar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>