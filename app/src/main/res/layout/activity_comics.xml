<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.comics.ComicsActivity">

    <ImageView
            android:layout_width="181dp"
            android:layout_height="196dp"
            app:srcCompat="@drawable/default_image"
            android:id="@+id/iv_comics_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/tv_comics_title"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_comics_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintHorizontal_bias="0.498"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comics_description"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_comics_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>


    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="209dp"
            android:id="@+id/rv_images_list"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_comics_description"/>

</android.support.constraint.ConstraintLayout>