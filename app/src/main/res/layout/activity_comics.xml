<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.comics.ComicsActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="372dp"
            tools:layout_editor_absoluteX="8dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:text="Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_comics_details_title"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_comics_thumbnail"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.498"/>

            <TextView
                    android:text="Desctription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_comics_details_description"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comics_details_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/rv_comics_details_images_list"
                    android:text="Browse covers by swiping..."
                    app:layout_constraintBottom_toTopOf="@+id/rv_comics_details_images_list"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comics_details_description"
                    app:layout_constraintHorizontal_bias="0.036"
                    app:layout_constraintVertical_bias="1.0"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_label_for_rv_comics_details_images_list"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="395dp"
                    android:layout_height="209dp"
                    android:id="@+id/rv_comics_details_images_list"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comics_details_description"
                    app:layout_constraintHorizontal_bias="0.0">

            </android.support.v7.widget.RecyclerView>

            <ImageView
                    android:layout_width="181dp"
                    android:layout_height="216dp"
                    app:srcCompat="@drawable/default_image"
                    android:id="@+id/iv_comics_thumbnail"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>