<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/character_list_item"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/default_image"
            android:id="@+id/ivThumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textSize="20dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/ivThumbnail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tb_character_list_item_favourite_toggle"/>

    <ToggleButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/tb_character_list_item_favourite_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/favourite_empty"
            android:textOn=""
            android:textOff=""
            />

</android.support.constraint.ConstraintLayout>