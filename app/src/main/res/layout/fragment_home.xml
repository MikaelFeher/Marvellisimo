<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.HomeFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Welcome to Marvellisimo!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_main_header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="68dp"
                app:layout_constraintHorizontal_bias="0.4"/>

        <TextView
                android:id="@+id/tv_main_info"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/app_info"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_main_header"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:paddingTop="0dp"
                app:layout_constraintVertical_bias="0.022"
                android:gravity="center"
                app:layout_constraintHorizontal_bias="0.491"
                tools:layout_editor_absoluteY="132dp"
                tools:layout_editor_absoluteX="16dp"/>

        <EditText
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Search..."
                android:ems="10"
                android:id="@+id/et_search_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintVertical_bias="0.546"
                />

        <Button
                android:text="Find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_submit"
                app:layout_constraintTop_toBottomOf="@+id/et_search_input"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <Switch
                android:text="Character"
                android:layout_width="131dp"
                android:layout_height="25dp"
                android:id="@+id/sw_search_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/et_search_input"
                android:layout_marginBottom="20dp"
                app:layout_constraintHorizontal_bias="0.498"
                android:showText="false"
                android:splitTrack="false"
                tools:checked="false"
                tools:text="Comics"
                android:checked="true"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>